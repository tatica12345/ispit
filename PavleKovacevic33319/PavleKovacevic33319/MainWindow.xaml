<Window x:Class="PavleKovacevic33319.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PavleKovacevic33319"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid Margin="10,0,0,6">
        <DataGrid Name="DataGrid1" AutoGenerateColumns="False" Margin="0,0,0,377" SelectionChanged="DataGrid1_SelectionChanged">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="MenuItemIzracunajBaksis" Header="Izracunaj Baksis" Click="MenuItemIzracunajBaksis_Click" />
                    <MenuItem Name="MenuItemOtkazi" Header="Otkazi" Click="MenuItemOtkazi_Click" />

                </ContextMenu>

            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding TretmanID}" Width="150"  Header="IDTretma"/>
                <DataGridTextColumn Binding="{Binding Opis}" Width="150" Header="Opis"/>
                <DataGridTextColumn Binding="{Binding Cena}" Width="150" Header="Cena"/>
                <DataGridTextColumn Binding="{Binding KlijentIme}" Width="150" Header="Klijent"/>
                <DataGridTextColumn Binding="{Binding RadnikIme}" Width="150" Header="Radnik"/>
                <DataGridTextColumn Binding="{Binding Datum}" Width =" 150" Header =" Datum"/>
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Name="gbBaksis" Header="Bakšiš" Margin="263,167,342,54">
            <Grid Height="296" Margin="0,0,-2,0">
                <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Cena tretmana" VerticalAlignment="Top"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,84,0,0" TextWrapping="Wrap" Text="Procenat Bakšiša" VerticalAlignment="Top"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,176,0,0" TextWrapping="Wrap" Text="Bakšiš" VerticalAlignment="Top"/>
                <TextBox Name="tbCenaTretmana" HorizontalAlignment="Left" Margin="26,48,0,0" TextWrapping="Wrap" Text="{Binding ElementName=DataGrid1, Path=SelectedItem.Cena, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
                <TextBox Name="tbBaksis" HorizontalAlignment="Left" Margin="26,197,0,0" TextWrapping="Wrap" IsReadOnly="True" VerticalAlignment="Top" Width="120"/>
                <Button Name="btnIzracunaj" Content="Izračunaj" HorizontalAlignment="Left" Margin="54,230,0,0" VerticalAlignment="Top" Click="btnIzracunaj_Click"/>
                <ComboBox Name="CmbProcenat" HorizontalAlignment="Left" Margin="26,130,0,0" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Content="10" Tag="10"/>
                    <ComboBoxItem Content="15" Tag="15"/>
                    <ComboBoxItem Content="20" Tag="20"/>
                </ComboBox>



            </Grid>
        </GroupBox>
        <GroupBox Name="gbIzmenaTretmana" Header="Izmena Tretmana" Margin="515,176,74,78">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="ID tretmana" VerticalAlignment="Top"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,76,0,0" TextWrapping="Wrap" Text="Cena" VerticalAlignment="Top"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,145,0,0" TextWrapping="Wrap" Text="Opis" VerticalAlignment="Top"/>
                <TextBox Name="tbTretmanID" HorizontalAlignment="Left" Margin="10,40,0,0" TextWrapping="Wrap" IsReadOnly="True" Text="{Binding ElementName=DataGrid1, Path=SelectedItem.TretmanID, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
                <TextBox Name="tbCena" HorizontalAlignment="Left" Margin="10,111,0,0" TextWrapping="Wrap" Text="{Binding ElementName=DataGrid1, Path=SelectedItem.Cena, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
                <TextBox Name="tbOpis" HorizontalAlignment="Left" Margin="10,166,0,0" TextWrapping="Wrap" Text="{Binding ElementName=DataGrid1, Path=SelectedItem.Opis, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
                <Button Name="btnPotvrdi" Content="Potvrdi" HorizontalAlignment="Left" Margin="55,207,0,0" VerticalAlignment="Top" Height="31" Width="64" Click="btnPotvrdi_Click"/>

            </Grid>

        </GroupBox>

        <Button Name="btnIzmeni" Content="Izmeni" HorizontalAlignment="Left" Margin="588,479,0,0" VerticalAlignment="Top" Click="btnIzmeni_Click"/>
        <Button Name="btnNajduziStaz" Content="Najduzi staz" HorizontalAlignment="Left" Margin="310,489,0,0" VerticalAlignment="Top" Click="btnNajduziStaz_Click"/>
        <Button Name="btnNajkraciStaz" Content="Najkraci Staz" HorizontalAlignment="Left" Margin="69,479,0,0" VerticalAlignment="Top" Click="btnNajkraciStaz_Click"/>

        <GroupBox x:Name="gbDetaljiTretmana" Header="Detalji tretmana" Margin="34,181,554,78">
            <StackPanel>
                <Label Name="lbRadnikID" Content="Radnik ID"/>
                <Label Name="lbKlijentID" Content="KlijentID"/>

            </StackPanel>

        </GroupBox>

    </Grid>
</Window>

